{
    "name": "Aura Stem Splitter",
    "image": "mcr.microsoft.com/devcontainers/python:3.9",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "customizations": {
        "vscode": {
            "settings": {},
            "extensions": [
                "ms-python.python"
            ]
        }
    },
    "forwardPorts": [
        7860
    ],
    "onCreateCommand": "sudo apt-get update && sudo apt-get install -y ffmpeg libsndfile1",
    "postCreateCommand": "pip install -r requirements.txt"
}